<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/newStatusBarColor</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.DeviceDefault.Light.NoActionBar" parent="AppTheme">

    </style>

    <style name="revisedTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/backColor</item>
        <item name="android:colorBackground">@color/backColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/buttonColor</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:statusBarColor">@color/newStatusBarColor</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="revisedTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="revisedTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
